@model Estapar.Model.ViewModel.CarroViewModel
@{
    ViewData["Title"] = "Estapar - Editar Carros";
    ViewBag.Title = "Estapar - Editar Carros";
}

<div class="col-lg-12">
    <div class="card m-b-30">
        <div class="card-body">
            <section>
                <form method="post" enctype="multipart/form-data" asp-controller="Carro"
                      asp-action="Update">
                    @Html.Hidden("IdCarro", Model.CRR_ID)
                    <div class="form-group" style="font-size: large; float: left; margin-right: 30px">
                        <label for="txtMarcaCarro">Marca</label>
                        <input type="text" class="form-control" style="width: 300px" id="txtMarcaCarro" placeholder="Marca do Carro" value="@Model.CRR_MARCA" />
                    </div>
                    <div class="form-group" style="font-size: large; float: left; margin-right: 30px">
                        <label for="txtModeloCarro">Modelo</label>
                        <input type="text" class="form-control" style="width: 300px" id="txtModeloCarro" placeholder="Modelo do Carro" value="@Model.CRR_MODELO" />
                    </div>
                    <div class="form-group" style="font-size: large; float: left; margin-right: 30px">
                        <label for="txtPlacaCarro">Placa</label>
                        <input type="text" class="form-control" style="width: 300px" id="txtPlacaCarro" maxlength="7" placeholder="Placa do Carro" value="@Model.CRR_PLACA" />
                    </div>
                </form>
            </section>
        </div>
        <div class="card-footer">
            <div class="col-12">
                <div>
                    <a onclick="UpdateCarro()" class="btn btn-primary" style="float: right"><i class="feather-plus mr-2 right"></i>Atualizar Carro</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
    <script>
        function UpdateCarro() {
            var t_marca = $("#txtMarcaCarro").val();
            var t_modelo = $("#txtModeloCarro").val();
            var t_placa = $("#txtPlacaCarro").val();
            var t_id = $("#IdCarro").val();
            location.href = '/Carro/Update?marca=' + t_marca + '&modelo=' + t_modelo + '&placa=' + t_placa + '&id=' + t_id;
        }
    </script>
}