@model Estapar.Model.ViewModel.ManobristaViewModel
@{
    ViewData["Title"] = "Estapar - Editar Manobristas";
    ViewBag.Title = "Estapar - Editar Manobristas";
}

<div class="col-lg-12">
    <div class="card m-b-30">
        <div class="card-body">
            <section>
                <form method="post" enctype="multipart/form-data" asp-controller="Manobrista"
                      asp-action="Update">
                    @Html.Hidden("IdManobrista", Model.MNB_ID)
                    <div class="form-group" style="font-size: large; float: left; margin-right: 30px">
                        <label for="txtNomeManobrista">Nome</label>
                        <input type="text" class="form-control" style="width: 300px" id="txtNomeManobrista" placeholder="Nome do Manobrista" value="@Model.MNB_NOME" />
                    </div>
                    <div class="form-group" style="font-size: large; float: left; margin-right: 30px">
                        <label for="txtCpfManobrista">CPF</label>
                        <input type="text" class="form-control" style="width: 300px" id="txtCpfManobrista" placeholder="___.___.___-__" value="@Model.MNB_CPF" />
                    </div>
                    <div class="form-group" style="font-size: large; float: left; margin-right: 30px">
                        <label for="txtNascManobrista">Data Nascimento</label>
                        <input type="text" class="form-control" style="width: 300px" id="txtNascManobrista" placeholder="__/__/____" value="@Model.MNB_NASCIMENTO" />
                    </div>
                </form>
            </section>
        </div>
        <div class="card-footer">
            <div class="col-12">
                <div>
                    <a onclick="UpdateManobrista()" class="btn btn-primary" style="float: right"><i class="feather-plus mr-2 right"></i>Atualizar Manobrista</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
    <script>
        var cpf = $("#txtCpfManobrista");
        cpf.mask('000.000.000-00', { reverse: true });

        var nasc = $("#txtNascManobrista");
        nasc.mask('00/00/0000', { reverse: true });

        function UpdateManobrista() {
            var t_nome = $("#txtNomeManobrista").val();
            var t_cpf = $("#txtCpfManobrista").val();
            var t_nasc = $("#txtNascManobrista").val();
            var t_id = $("#IdManobrista").val();
            location.href = '/Manobrista/Update?nome=' + t_nome + '&cpf=' + t_cpf + '&nasc=' + t_nasc + '&id=' + t_id;
        }
    </script>
}